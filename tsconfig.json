{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
